
<div class="row">
  <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4" align="center">
    <h3>Env√≠anos un mensaje</h3>
    <p>
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <div class="form-group">
          <%= f.input :name, :label => "Nombre", :required => true %>
          <%= f.input :email, :required => true %>
          <%= f.input :message, :label => "Mensaje", :as => :text, :required => true %>
          <div class= "hidden">
            <%= f.input :nickname, :hint => 'Dejar en blanco!' %>
          </div>
          <div>
            </br>
            <%= f.button :submit, 'Enviar Mensaje', :class=> "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </p>
  </div>
</div>